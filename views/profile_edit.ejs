  <div class="w-full bg-cardBg h-full fixed bottom-0 left-1/2 transform -translate-x-1/2 pt-56">

    <div class="flex flex-col items-center" style="transform: translateY(-80px)">
      <img class="w-40 h-40 mb-3 rounded-full shadow-lg"
        src="<%= user.profileImageUrl ? user.profileImageUrl : 'profile.png' %>" alt="Profile image" />

      <div class="flex flex-col items-center space-y-4">
        <div class="flex items-center space-x-2">
          <input id="username" type="text"
            class="py-2 px-8 text-sm font-medium text-center text-gray-900 bg-white border-gray-300 rounded-xl focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-300"
            placeholder="Username *" value="<%= user && user.username ? user.username : '' %>">
        </div>

        <div class="flex items-center space-x-2">
          <input id="email" type="text"
            class="text-gray-400 cursor-not-allowed py-2 px-8 text-sm font-medium text-center bg-white border-gray-300 rounded-xl focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-300"
            placeholder="Email *" value="<%= user && user.email ? user.email : '' %>" disabled>
        </div>

        <div class="flex items-center space-x-2">
          <input id="phonenumber" type="text"
            class="py-2 px-8 text-sm font-medium text-center text-gray-900 bg-white border-gray-300 rounded-xl focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-300"
            placeholder="Phone Number" value="<%= user && user.phonenumber ? user.phonenumber : '' %>">
        </div>

        <div class="flex items-center space-x-2">
          <input id="street" type="text"
            class="py-2 px-8 text-sm font-medium text-center text-gray-900 bg-white border-gray-300 rounded-xl focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-300"
            placeholder="Street" value="<%= user && user.street ? user.street : '' %>">
        </div>

        <div class="flex items-center space-x-2">
          <input id="city" type="text"
            class="py-2 px-8 text-sm font-medium text-center text-gray-900 bg-white border-gray-300 rounded-xl focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-300"
            placeholder="City" value="<%= user && user.city ? user.city : '' %>">
        </div>

        <div class="flex items-center space-x-2">
          <input id="postal" type="text"
            class="py-2 px-8 text-sm font-medium text-center text-gray-900 bg-white border-gray-300 rounded-xl focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-300"
            placeholder="Postal Code" value="<%= user && user.postal ? user.postal : '' %>">
        </div>

      </div>
    </div>

    <div class="flex justify-center  mt-[-50px]">
      <button onclick="window.location.href='/account'"
        class="w-28 py-2 px-8 mx-2 text-md font-medium text-center text-white bg-black rounded-xl hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300">Cancel</button>
      <button id="saveBtn"
        class="w-28 py-2 px-8 mx-2 text-md font-medium text-center text-white bg-red-600 rounded-xl hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300">Save</button>
    </div>

    <br>
    <div id="error-message" class="text-red-500 mb-4 text-center"></div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const ids = ['username', 'phonenumber', 'street', 'city', 'postal'];
      ids.forEach(id => {
        if (!document.getElementById(id)) {
          console.error(`Element with ID ${id} not found.`);
        }
      });

      const saveBtn = document.getElementById("saveBtn");
      if (!saveBtn) {
        console.error("Save button not found.");
        return;
      }

      // Validation patterns
      const validUsernamePattern = /^[a-zA-Z0-9_-]+$/;  // Only letters, numbers, underscores, and hyphens
      const validStreetCityPattern = /^[a-zA-Z0-9\s.,'-]+$/; // Allows letters, numbers, spaces, periods, commas, apostrophes, and hyphens

      const phoneInput = document.getElementById('phonenumber');
      if (phoneInput) {
        phoneInput.addEventListener('input', function () {
          let value = this.value.replace(/\D/g, '');
          if (value.length > 10) {
            value = value.substring(0, 10);
          }
          if (value.length > 6) {
            value = value.replace(/(\d{3})(\d{3})(\d{4})/, '$1-$2-$3');
          } else if (value.length > 3) {
            value = value.replace(/(\d{3})(\d+)/, '$1-$2');
          }
          this.value = value;
        });
      }

      const postalInput = document.getElementById('postal');
      if (postalInput) {
        postalInput.addEventListener('input', function () {
          let value = this.value.replace(/\s+/g, '').toUpperCase();
          if (value.length > 6) {
            value = value.substring(0, 6);
          }
          if (value.length > 3) {
            value = value.replace(/(\w{3})(\w{3})/, '$1 $2');
          }
          this.value = value;
        });
      }

      saveBtn.addEventListener("click", async () => {
        const userInfo = ids.reduce((acc, id) => {
          const elem = document.getElementById(id);
          if (elem) {
            acc[id] = elem.value.trim();
          }
          return acc;
        }, {});

        const errorMessageElement = document.getElementById('error-message');
        let errorMessage = '';

        if (!userInfo.username) {
          errorMessageElement.textContent = 'Username is required.';
          return;
        } else {
          errorMessageElement.textContent = '';
        }

        try {
          const response = await fetch("/profile_edit", {
            method: "POST",
            headers: {
              "Content-Type": "application/json; charset=UTF-8"
            },
            body: JSON.stringify(userInfo)
          });

          const result = await response.json();
          if (result.success) {
            alert("Profile updated successfully!");
            window.location.href = '/account';
          } else {
            const errors = result.errors.map(error => `${error.field}: ${error.message}`).join('\n');
            alert("Error updating profile:\n" + errors);
          }
        } catch (error) {
          console.error("Failed to send request:", error);
          alert("Failed to send request: " + error.message);
        }
      });
    });
  </script>

