  <h1
    style="text-align: center; margin: 20px 0; position: absolute; left: 50%; transform: translateX(-50%); z-index: 1; color: black; font-size:xx-large; font-weight:800; font-family: 'Poetsen One', sans-serif; letter-spacing: 2px;">
    Dronify</h1>

  <!-- the home icon to the left of the search bar -->
  <div class="home-icon">
    <a href="/postlogin">
      <svg xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" width="44" height="44" viewBox="0 0 48 48"
        style="fill:#cbcbcb;">
        <path
          d="M39.5,43h-9c-1.381,0-2.5-1.119-2.5-2.5v-9c0-1.105-0.895-2-2-2h-4c-1.105,0-2,0.895-2,2v9c0,1.381-1.119,2.5-2.5,2.5h-9	C7.119,43,6,41.881,6,40.5V21.413c0-2.299,1.054-4.471,2.859-5.893L23.071,4.321c0.545-0.428,1.313-0.428,1.857,0L39.142,15.52	C40.947,16.942,42,19.113,42,21.411V40.5C42,41.881,40.881,43,39.5,43z">
        </path>
      </svg>
    </a>
  </div>

  <div class="w-full bg-cardBg h-full fixed bottom-0 left-1/2 transform -translate-x-1/2 pt-56">

    <div class="flex flex-col items-center" style="transform: translateY(-80px)">
      <img class="w-40 h-40 mb-3 rounded-full shadow-lg" src="/profile.png" alt="Profile image" />
      <div class="flex items-center">
        <h5 class="m-4 text-xl font-medium text-gray-900 dark:text-white">
          <%= user && user.name ? user.name : 'Unknown User' %>
        </h5>
      </div>

      <form id="paymentForm" class="flex flex-col items-center space-y-6 mt-6">
        <input type="text" id="cardType" name="cardType" value="<%= payment.cardType %>"
          class="w-3/4 py-2 px-6 text-sm font-medium text-center text-gray-900 bg-white border-gray-300 rounded-xl focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-300"
          placeholder="Card Type">
        <input type="text" id="cardNumber" name="cardNumber" value="<%= payment.cardNumber %>"
          class="w-3/4 py-2 px-6 text-sm font-medium text-center text-gray-900 bg-white border-gray-300 rounded-xl focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-300"
          placeholder="Card Number">
        <input type="text" id="cvv" name="cvv" value="<%= payment.cvv %>"
          class="w-3/4 py-2 px-6 text-sm font-medium text-center text-gray-900 bg-white border-gray-300 rounded-xl focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-300"
          placeholder="CVV">
        <input type="text" id="expiryDate" name="expiryDate" value="<%= payment.expiryDate %>"
          class="w-3/4 py-2 px-6 text-sm font-medium text-center text-gray-900 bg-white border-gray-300 rounded-xl focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-300"
          placeholder="Expiry Date">
      </form>
    </div>

    <div class="flex justify-center mt-[-50px]">
      <button id="savePaymentBtn" onclick="window.location.href='/payment_list'"
        class="py-2 px-8 mt-2 mx-4 text-md font-medium text-center text-white bg-red-500 rounded-xl hover:bg-red-600 focus:ring-4 focus:outline-none focus:ring-red-300 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-800">Save</button>
      <button onclick="window.location.href='/payment_list'"
        class="py-2 px-8 mt-2 mx-4 text-md font-medium text-center text-white bg-red-500 rounded-xl hover:bg-red-600 focus:ring-4 focus:outline-none focus:ring-red-300 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-800">Cancel</button>
    </div>
  </div>

  <script>
    document.getElementById('savePaymentBtn').addEventListener('click', function () {
      var form = document.getElementById('paymentForm');
      var formData = new FormData(form);
      var object = {};
      formData.forEach(function (value, key) {
        object[key] = value;
      });
      var json = JSON.stringify(object);

      fetch('/update_payment/<%= payment._id %>', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: json
      })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            alert('Payment updated successfully!');
            window.location.href = '/payment_list';
          } else {
            alert('Failed to update payment.');
          }
        })
        .catch(error => {
          alert('Error updating payment: ' + error);
        });
    });
  </script>

  <%- include('templates/footer') %>