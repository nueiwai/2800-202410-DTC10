    <div id="mainMenuCard" class="flex gap-12 justify-center p-4">
      <div class="flex flex-col w-[15%]">
        <button id="droneShareBtn" class="rounded-lg hover:bg-cardBgHover">
          <img src="images/core_feature_icon1.svg" class="rounded-lg mx-auto focus:ring-2 focus:ring-white"
            alt="drone-share" tabindex="0" />
        </button>
        <div class="mt-2 font-medium text-center text-buttonBg leading-tight">Drone-share</div>
      </div>

      <!-- Direct delivery option -->
      <div class="flex flex-col w-[15%]">
        <button id="directDeliveryBtn" class="rounded-lg hover:bg-cardBgHover">
          <img src="images/core_feature_icon3.svg"
            class="hover:bg-cardBgHover rounded-lg mx-auto focus:ring-2 focus:ring-white" alt="direct-delivery"
            tabindex="0" />
        </button>
        <div class="mt-2 font-medium text-center text-buttonBg leading-tight">Direct Delivery</div>
      </div>

      <!-- Roadside assistance option -->
      <div class="flex flex-col w-[15%]">
        <button id="roadsideAssistanceBtn" class="rounded-lg hover:bg-cardBgHover">
          <img src="images/core_feature_icon2.svg" class="rounded-lg mx-auto focus:ring-2 focus:ring-white"
            alt="roadside-assistance" tabindex="0" />
        </button>
        <div class="mt-2 font-medium text-center text-buttonBg leading-tight">Roadside Assistance</div>
      </div>
    </div>

