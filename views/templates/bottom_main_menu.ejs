    <!-- Selecting the size of the package/delivery -->
    <div id="selectSizeMenu" class="hidden container flex flex-col justify-center transform translate-x-full">
      <h1 class="font-bold text-2xl pb-4 text-center">Please select an option</h1>

      <!-- Small option -->
      <button id="small" class="pkg-select flex gap-2 text-white bg-buttonBg rounded-md px-4 py-2 mb-4 items-center w-[100%] hover:text-black hover:bg-white focus:ring-2 focus:ring-white">
        <img src="package.png" alt="" class="w-[15%]" />
        <div class="flex flex-col items-start">
          <p class="font-bold">Small: (Under 100cm)</p>
          <p>L+W+H in cm</p>
        </div>
        <div class="ml-auto">$<span id="smallPrice"></span></div>
      </button>

      <!-- Medium option -->
      <button id="medium" class="pkg-select flex gap-2 text-white bg-buttonBg rounded-md px-4 py-2 mb-4 items-center w-[100%] hover:text-black hover:bg-white focus:ring-2 focus:ring-white">
        <img src="package.png" alt="" class="w-[15%]" />
        <div class="flex flex-col items-start">
          <p class="font-bold">Medium: (Under 120cm)</p>
          <p>L+W+H in cm</p>
        </div>
        <div class="ml-auto">$<span id="mediumPrice"></span></div>
      </button>

      <!-- Large option -->
      <button id="large" class="pkg-select flex gap-2 text-white bg-buttonBg rounded-md px-4 py-2 mb-4 items-center w-[100%] hover:text-black hover:bg-white focus:ring-2 focus:ring-white">
        <img src="package.png" alt="" class="w-[15%]" />
        <div class="flex flex-col items-start">
          <p class="font-bold">Large: (Under 150cm)</p>
          <p>L+W+H in cm</p>
        </div>
        <div class="ml-auto">$<span id="largePrice"></span></div>
      </button>

      <!-- Cancel and next buttons -->
      <div class="flex gap-2 w-full mt-2">
        <button class="w-[100%] rounded-md bg-yellowishGray text-black p-2 focus:ring-1 ring-black">Cancel</button>
        <button id="selectSizeNextBtn" class="w-[100%] rounded-md bg-black text-white p-2 focus:ring-1 ring-white">Next</button>
      </div>
    </div>

    <!-- Payment method container -->
    <div id="paymentMethodContainer" class="flex flex-col gap-2 px-4 pb-4 w-full absolute left-0 right-0 bottom-0 transform translate-x-full">
      <h1 class="text-center font-bold font-2xl mt-[30px]">Select a payment method</h1>
      <div class="flex flex-col my-auto">
        <button id="credit" class="payment-select flex gap-2 text-white bg-buttonBg rounded-md p-4 mb-3 items-center w-[100%] focus:ring-2 focus:ring-white">Credit card</button>
        <button id="debit" class="payment-select flex gap-2 text-white bg-buttonBg rounded-md p-4 mb-3 items-center w-[100%] focus:ring-2 focus:ring-white">Debit card</button>
        <button id="crypto" class="payment-select flex gap-2 text-white bg-buttonBg rounded-md p-4 mb-3 items-center w-[100%] focus:ring-2 focus:ring-white">Crypto Wallet</button>
      </div>
      <div class="flex gap-2 w-full mt-2">
        <button class="w-[100%] rounded-md bg-yellowishGray text-black p-2 focus:ring-1 ring-black">Cancel</button>
        <button id="paymentMethodNextBtn" class="w-[100%] rounded-md bg-black text-white p-2 focus:ring-1 ring-white">Next</button>
      </div>
    </div>

    <!-- Confirmation container -->
    <div id="confirmationMenuContainer" class="absolute left-0 top-0 bottom-0 transform translate-x-full">
      <h1 class="text-center font-bold font-2xl">Confirmation</h1>
      <div class="grid grid-cols-4 gap-2 p-3">
        <!-- Step 1 -->
        <div class="p-1">
          <img src="confirmation_1.png" class="p-2 rounded-full w-[50px] mx-auto border-2 border-[#010204] bg-white" alt="request received" tabindex="0" />
          <div class="mt-2 font-medium font-sm text-center text-[#010204] leading-tight">Request Received</div>
        </div>
        <!-- Step 2 -->
        <div class="p-1">
          <img src="confirmation_2.png" class="p-2 rounded-full w-[50px] mx-auto border-2 border-[#074464] bg-[#CBCBCB]" alt="drone deployed" tabindex="0" />
          <div class="mt-2 font-medium font-sm text-center text-buttonBg leading-tight">Drone Deployed</div>
        </div>
        <!-- Step 3 -->
        <div class="p-1">
          <img src="confirmation_3.png" class="p-2 rounded-full w-[50px] mx-auto border-2 border-[#074464] bg-[#CBCBCB]" alt="drone arriving" tabindex="0" />
          <div class="mt-2 font-medium font-sm text-center text-buttonBg leading-tight">Drone Arriving</div>
        </div>
        <!-- Step 4 -->
        <div class="p-1">
          <img src="confirmation_4.png" class="p-2 rounded-full w-[50px] mx-auto border-2 border-[#074464] bg-[#CBCBCB]" alt="drone landed" tabindex="0" />
          <div class="mt-2 font-medium font-sm text-center text-buttonBg leading-tight">Drone Landed</div>
        </div>
      </div>

      <div>
        <p class="font-medium p-3 py-2 text-[#010204] text-lg">Your delivery is arriving in:</p>
      </div>

      <div class="grid grid-cols-2 gap-1">
        <div class="p-1">
          <div>
            <div class="flex items-center m-2 mt-0 mb-4">
              <p class="w-full py-1 px-2 text-base font-medium text-center text-white bg-[#010204] rounded-2xl">10 minutes
              </p>
            </div>
          </div>
          <div class="my-0">
            <%- include("mini_map") %>
          </div>
        </div>
        <div class="p-1">
          <div>
            <div class="flex items-center m-2 mt-0">
              <p class="w-full py-1 px-2 text-sm text-center text-white bg-[#074464] border-[#074464] rounded-2xl">
                Tracking: #583027015</p>
            </div>
          </div>
          <div>
            <div class="flex items-center m-2">
              <p class="w-full py-1 px-2 text-sm text-center text-white bg-[#074464] border-[#074464] rounded-2xl">From:
                Downtown</p>
            </div>
          </div>
          <div>
            <div class="flex items-center m-2">
              <p class="w-full py-1 px-2 text-sm text-center text-white bg-[#074464] border-[#074464] rounded-2xl">To:
                Kerrisdale</p>
            </div>
          </div>
          <div>
            <div class="flex items-center m-2 mb-4">
              <p class="w-full py-1 px-2 text-sm text-center text-white bg-[#074464] border-[#074464] rounded-2xl">
                Pilot: Johnny Appleseed</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

