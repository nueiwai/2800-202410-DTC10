<%- include('templates/header') %>
<form action="/signup" method="POST">
  <div class="flex flex-col items-center w-[50%] mx-auto gap-2 p-2">
    <h1>Create User</h1>
    <div>
      <label for="name"></label>
      <input required class="border p-2" name="name" type="text" placeholder="name" />
    </div>
    <div>
      <label for="email"></label>
      <input required class="border p-2" name="email" type="text" placeholder="email" />
    </div>
    <div>
      <label for="password"></label>
      <input required class="border p-2" name="password" type="password" placeholder="password" />
    </div>
    <button class="border p-2 rounded-md hover:bg-blue-500 hover:text-slate-200" type="submit">Sign Up</button>
  </div>
</form>
