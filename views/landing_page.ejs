<%- include('templates/header') %>
<style>
  body {
    width: 100%;
    height: 100%;
    margin: 0;
    padding: 0;
    overflow: hidden;
  }

  #myVideo {
    position: fixed;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .video-mask {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(114, 111, 111, 0.3);
    z-index: 1;
  }
</style>

<video autoplay muted loop id="myVideo">
  <source src="landing_page_video.webm" type="video/mp4">
</video>

<div class="video-mask"></div>

<main class="absolute z-10 flex flex-col container w-full h-full">
  <div class="flex flex-col justify-center items-center mx-auto h-full">
    <img src="logo.png" alt="Dronify Logo" class="flex justify-center items-center mx-auto w-[200px]">
    <h1 class="mx-auto mb-4 text-6xl font-bold font-PoetsenOne text-white">Dronify</h1>
    <h3 class="mx-auto mb-6 text-4xl font-bold font-PoetsenOne text-white">We Unify</h3>
    <br>
    <div class="mx-auto space-x-2">
      <button onclick="window.location.href='/login'" class="bg-red-600 text-white py-3 px-6 rounded-lg hover:bg-red-300" style="font-size: 16px;">LOG IN</button>
      <button onclick="window.location.href='/signup'" class="bg-red-600 text-white py-3 px-6 rounded-lg hover:bg-red-300">SIGN UP</button>
    </div>
  </div>
</main>