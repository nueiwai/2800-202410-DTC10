<%- include('templates/header') %>
<form class="flex flex-col justify-center items-center gap-2 mx-auto p-4" method="POST" action="/login">
  <div>
    <input required class="border p-2" name="email" type="text" placeholder="email" />
  </div>
  <div>
    <input required class="border p-2" name="password" type="password" placeholder="password" />
  </div>
  <button class="border p-2 rounded-md hover:bg-blue-500 hover:text-slate-200">Login</button>
  <button class="border p-2 rounded-md hover:bg-blue-500 hover:text-slate-200" onclick="window.location.href='/resetpassword'">Forgot Password?</button>
</form>
