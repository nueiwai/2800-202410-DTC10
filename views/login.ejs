<%- include('templates/header') %>

  <div class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="bg-white p-6 rounded-lg shadow-md max-w-sm w-full">
      <h1 class="text-3xl font-bold text-center mb-4">DRONIFY</h1>
      <p class="text-center text-gray-700 mb-6">Welcome! Please Log In</p>
      <form class="flex flex-col justify-center items-center gap-2 mx-auto p-4" action="/resetpassword" method="post">
        <div>
          <label for="username" class="block text-lg font-medium text-gray-700 mb-2">Username</label>
          <input type="username" id="username" name="username" required
            class="border p-2 w-full rounded-lg focus:outline-none focus:ring-2 focus:ring-cardBg mb-4">
        </div>
        <div>
          <label for="password" class="block text-lg font-medium text-gray-700 mb-2">Password</label>
          <input type="password" id="password" name="password" required
            class="border p-2 w-full rounded-lg focus:outline-none focus:ring-2 focus:ring-cardBg mb-4">
        </div>
        <button type="submit"
          class="border p-2 rounded-md bg-buttonBg text-white font-semibold w-full hover:bg-buttonBgHover ">Log
          in</button>
        <button class="border p-2 rounded-md bg-buttonBg text-white font-semibold w-full hover:bg-buttonBgHover"
          onclick="window.location.href='/forgetid'">Reset
          Password</button>
      </form>
    </div>
  </div>


  <%- include('templates/footer') %>