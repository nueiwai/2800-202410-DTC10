<%- include('templates/header') %>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            background: '#31B6C0',
            process_button: '#074464',
          }
        }
      }
    }
  </script>

  <style>
    .height-3-5-screen {
      height: 60vh;
    }
  </style>


  <div id="map-container">
    <%- include('map') %>
  </div>

  <div
    class="w-full bg-background border border-gray-200 rounded-t-xl shadow dark:bg-gray-800 dark:border-gray-700 height-3-5-screen  fixed bottom-0 left-1/2 transform -translate-x-1/2">

    <div class="flex flex-col items-center mb-16" style="transform: translateY(-80px)">
      <img class="w-40 h-40 mb-3 rounded-full shadow-lg" src="profile.png" alt="Profile image" />
      <div class="flex items-center">
        <h5 class="m-4 text-xl font-medium text-gray-900 dark:text-white">Bonnie Green</h5>
      </div>

      <div class="flex flex-col items-center space-y-4 mt-10">
        <button onclick="window.location.href='/profile_edit'"
          class="w-full py-3 px-8 text-md font-medium text-center text-white bg-blue-700 rounded-xl hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
          style="background-color: #074464;">Edit Profile</button>
        <button onclick="window.location.href='/payment_list'"
          class="w-full py-3 px-8 text-md font-medium text-center text-white bg-blue-700 rounded-xl hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
          style="background-color: #074464;">Manage
          Payment</button>
      </div>
      <div>
        <button onclick="window.location.href='/logout'"
          class="w-full py-3 px-8 mt-14 text-md font-medium text-center text-white bg-red-500 rounded-xl hover:bg-red-600 focus:ring-4 focus:outline-none focus:ring-red-300 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-800">Sign
          Out</button>
      </div>
    </div>
  </div>
  <%- include('templates/footer') %>