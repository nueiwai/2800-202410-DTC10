<%- include('templates/header') %>

    <div class="flex items-center justify-center min-h-screen bg-gray-100">
        <div class="bg-white p-6 rounded-lg shadow-md max-w-sm w-full">
            <h1 class="text-3xl font-bold text-center mb-4">DRONIFY</h1>
            <p class="text-center text-gray-700 mb-6">Success! We found your account. Please reset your password.</p>
            <form action="/resetpassword" method="post">
                <label for="password" class="block text-lg font-medium text-gray-700 mb-2">Password</label>
                <input type="password" id="password" name="password" required
                    class="block w-full p-3 mb-4 border border-gray-300 rounded-lg bg-gray-100 focus:outline-none focus:ring-2 focus:ring-cardBg">

                <label for="confirm-password" class="block text-lg font-medium text-gray-700 mb-2">Confirm
                    Password</label>
                <input type="password" id="confirm-password" name="confirm-password" required
                    class="block w-full p-3 mb-4 border border-gray-300 rounded-lg bg-gray-100 focus:outline-none focus:ring-2 focus:ring-cardBg">

                <button type="submit"
                    class="w-full p-3 bg-gray-300 text-black font-semibold rounded-lg hover:bg-gray-400">RESET
                    PASSWORD</button>
            </form>
        </div>
    </div>

