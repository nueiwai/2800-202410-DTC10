<%- include('templates/header') %>

<!-- Main Location Modal -->
<div id="delivery-location-modal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-10rem)] max-h-full">

  <div class="relative p-4 w-full max-w-md max-h-full">
    <!-- Modal content -->
    <div class="relative bg-yellowishGray rounded-lg shadow-lg">

      <!-- Modal header -->
      <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t">
        <h3 class="text-xl font-semibold text-buttonBg">
          Choose starting location and destination
        </h3>

        <!-- Close modal button -->
        <button type="button" class="end-2.5 text-buttonBg bg-transparent hover:cardBgHover rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center" data-modal-hide="delivery-location-modal">
          <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
          </svg>
          <span class="sr-only">Close modal</span>
        </button>

      </div>


      <!-- Modal body -->
      <div class="p-4 md:p-5">

        <!-- Modal div -->
        <div class="space-y-4">

          <!-- Starting Location -->
          <label for="starting-location" class="block mb-2 text-sm font-medium text-buttonBg">Starting Location:</label>
          <div class="container flex flex-row gap-1 items-center">
            <input type="text" name="starting-location" id="starting-location" class="flex bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-buttonBg w-full p-2.5" placeholder="Starting location" />

            <!-- Location picker button -->
            <button class="flex bg-buttonBg p-2 rounded-lg" onclick="geolocation()">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#ffffff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-current-location">
                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                <path d="M12 12m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0" />
                <path d="M12 12m-8 0a8 8 0 1 0 16 0a8 8 0 1 0 -16 0" />
                <path d="M12 2l0 2" />
                <path d="M12 20l0 2" />
                <path d="M20 12l2 0" />
                <path d="M2 12l2 0" />
              </svg>
            </button>
          </div>

          <!-- Destination -->
          <label for="destination" class="block mb-2 text-sm font-medium text-buttonBg">Destination:</label>
          <div class="container flex flex-row gap-1 items-center">
            <input type="text" name="destination" id="destination" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-buttonBg w-full p-2.5" placeholder="Destination" />

            <!-- Location picker button -->
            <button class="flex bg-buttonBg p-2 rounded-lg">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#ffffff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-current-location">
                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                <path d="M12 12m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0" />
                <path d="M12 12m-8 0a8 8 0 1 0 16 0a8 8 0 1 0 -16 0" />
                <path d="M12 2l0 2" />
                <path d="M12 20l0 2" />
                <path d="M20 12l2 0" />
                <path d="M2 12l2 0" />
              </svg>
            </button>
          </div>

          <button class="w-full text-white bg-buttonBg focus:ring-white focus:ring-4 font-medium rounded-lg text-lg px-5 py-2.5 text-center">Confirm</button>

        </div>
      </div>
    </div>
  </div>
</div>