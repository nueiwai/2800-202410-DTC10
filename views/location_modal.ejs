<!-- Main Location Modal -->
<div id="delivery-location-modal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-hidden overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 max-h-full font-Nunito">

  <div class="relative p-4 w-full max-w-md max-h-full">
    <!-- Modal content -->
    <div class="relative bg-yellowishGray rounded-lg shadow-lg">

      <!-- Modal header -->
      <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t">
        <h3 class="text-xl font-semibold text-buttonBg">
          Choose starting location and destination
        </h3>

        <!-- Close modal button -->
        <button type="button" class="end-2.5 text-buttonBg bg-transparent hover:cardBgHover rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center" data-modal-hide="delivery-location-modal">
          <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
          </svg>
          <span class="sr-only">Close modal</span>
        </button>

      </div>


      <!-- Modal body -->
      <div class="p-4 md:p-5">

        <!-- Modal div -->
        <div class="space-y-4">

          <!-- Starting Location -->
          <div class="flex container justify-between items-center w-full">
            <label for="starting-location" class="block mb-2 text-lg font-medium text-buttonBg">Starting Location:</label>
            <!-- Location picker button -->
            <button id="starting-location-picker" class="flex bg-buttonBg p-2 rounded-lg" onclick="getCurrentLocationStart()">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#ffffff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-current-location">
                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                <path d="M12 12m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0" />
                <path d="M12 12m-8 0a8 8 0 1 0 16 0a8 8 0 1 0 -16 0" />
                <path d="M12 2l0 2" />
                <path d="M12 20l0 2" />
                <path d="M20 12l2 0" />
                <path d="M2 12l2 0" />
              </svg>
            </button>
          </div>
          <div id="starting-location" class="start-geocoder"></div>
          <input id="current-starting-location" class="hidden"></input>

          <!-- Destination -->
          <div class="flex container justify-between items-center w-full">
            <label for="destination" class="block mb-2 text-lg font-medium text-buttonBg">Destination:</label>
            <!-- Location picker button -->
            <button id="destination-picker" class="flex bg-buttonBg p-2 rounded-lg" onclick="getCurrentLocationEnd()">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#ffffff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-current-location">
                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                <path d="M12 12m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0" />
                <path d="M12 12m-8 0a8 8 0 1 0 16 0a8 8 0 1 0 -16 0" />
                <path d="M12 2l0 2" />
                <path d="M12 20l0 2" />
                <path d="M20 12l2 0" />
                <path d="M2 12l2 0" />
              </svg>
            </button>
          </div>
          <div id="destination" class="end-geocoder"></div>
          <input id="current-destination" class="hidden"></input>

          <button id="confirmBtn" class="w-full text-white bg-buttonBg focus:ring-white focus:ring-4 font-medium rounded-lg text-lg px-5 py-2.5 text-center" data-modal-hide="delivery-location-modal">Confirm</button>

        </div>
      </div>
    </div>
  </div>
</div>

<script>
  let confirmBtn = document.getElementById('confirmBtn');
  if (confirmBtn) {
    confirmBtn.addEventListener('click', function() {
      drawRoute();
    });
  }
</script>