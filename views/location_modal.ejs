<!-- Main Location Modal -->
<div id="delivery-location-modal" tabindex="-1" aria-hidden="true" class="transform -translate-y-full">
  <div class="relative p-4 w-full max-w-md max-h-full">
    <!-- Modal content -->
    <div class="relative bg-yellowishGray rounded-lg shadow-lg">
      <!-- Modal header -->
      <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t">
        <h3 class="text-xl font-semibold text-buttonBg">Choose starting location and destination</h3>

        <!-- Close modal button -->
        <button type="button" class="end-2.5 text-buttonBg bg-transparent hover:cardBgHover rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center">
          <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
          </svg>
          <span class="sr-only">Close modal</span>
        </button>
      </div>

      <!-- Modal body -->
      <div class="px-4 pb-4 pt-3 md:p-5">
        <!-- Modal div -->
        <div class="space-y-2">
          <!-- Starting Location -->
          <div class="flex container justify-between items-center w-full">
            <label for="starting-location" class="block mb-1 text-lg font-medium text-buttonBg">Starting Location:</label>
          </div>
          <!-- Location picker button -->
          <div id="starting-location" class="start-geocoder relative">
            <button id="starting-location-picker" class="flex bg-buttonBg p-2 rounded-lg absolute right-0 top-[50%] transform -translate-y-[50%] mr-2 z-50" onclick="getCurrentLocationStart()">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="#ffffff"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="icon icon-tabler icons-tabler-outline icon-tabler-current-location"
              >
                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                <path d="M12 12m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0" />
                <path d="M12 12m-8 0a8 8 0 1 0 16 0a8 8 0 1 0 -16 0" />
                <path d="M12 2l0 2" />
                <path d="M12 20l0 2" />
                <path d="M20 12l2 0" />
                <path d="M2 12l2 0" />
              </svg>
            </button>
          </div>
          <input id="current-starting-location" class="hidden" />

          <!-- Destination -->
          <div class="flex container justify-between items-center w-full">
            <label for="destination" class="block mb-[5px] text-lg font-medium text-buttonBg">Destination:</label>
          </div>
          <div id="destination" class="end-geocoder">
            <!-- Location picker button -->
            <button id="destination-picker" class="flex bg-buttonBg p-2 rounded-lg absolute right-0 top-[50%] transform -translate-y-[50%] mr-2 z-50" onclick="getCurrentLocationEnd()">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="#ffffff"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="icon icon-tabler icons-tabler-outline icon-tabler-current-location"
              >
                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                <path d="M12 12m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0" />
                <path d="M12 12m-8 0a8 8 0 1 0 16 0a8 8 0 1 0 -16 0" />
                <path d="M12 2l0 2" />
                <path d="M12 20l0 2" />
                <path d="M20 12l2 0" />
                <path d="M2 12l2 0" />
              </svg>
            </button>
          </div>
          <input id="current-destination" class="hidden" />

          <button
            id="confirmBtn"
            data-drawer-toggle="selectSizeMenu"
            data-drawer-target="selectSizeMenu"
            data-drawer-placement="bottom"
            data-drawer-edge="true"
            aria-controls="selectSizeMenu"
            data-drawer-backdrop="false"
            data-drawer-body-scrolling="false"
            class="w-full text-white bg-buttonBg focus:ring-white focus:ring-4 font-medium rounded-lg text-lg px-5 py-2.5 text-center"
          >
            Confirm
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  let confirmBtn = document.getElementById("confirmBtn");
  if (confirmBtn) {
    confirmBtn.addEventListener("click", function () {
      drawRoute();
    });
  }
</script>
