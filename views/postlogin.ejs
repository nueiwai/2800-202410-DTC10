<%- include("templates/map_header") %>

<style>
  #availableBatteriesCard {
    transform: translateX(100%);
    position: absolute;
    bottom: 0px;
    left: 0px;
    width: 100%;
  }

  .slide-in-left {
    transform: translateX(0%) !important;
    transition-property: transform !important;
    transition-duration: 300ms !important;
    animation-timing-function: ease-in-out !important;
  }

  .slide-out-left {
    transform: translateX(-100%) !important;
    transition-property: transform !important;
    transition-duration: 300ms !important;
    animation-timing-function: ease-in-out !important;
  }

  .slide-up {
    transform: translateY(-100%) !important;
    transition-property: transform !important;
    transition-duration: 300ms !important;
    animation-timing-function: ease-in-out !important;
  }

  .set-offscreen-right {
    position: absolute;
    bottom: 0px;
    left: 0px;
    width: 100%;
    transform: translateX(100%);
  }

  #paymentMethods {
    transform: translateX(100%);
    position: absolute;
    bottom: 0px;
    left: 0px;
    width: 100%;
    padding-top: 20px;
  }

  input {
    outline: none !important;
  }

  #starting-location > div {
    border-radius: 15px !important;
  }

  #destination > div {
    border-radius: 15px !important;
  }
</style>

<%- include("templates/map") %> <%- include("battery_station_map") %> <%- include("location_modal") %> <%- include("templates/bottom_main_menu") %>

<script>
  window.cardData = JSON.parse(`<%- cards %>`);
</script>

